    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kr.co.tjeit.yogiyocopy.MainActivity">

    <TabHost
        android:id="@+id/myTabHost"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
